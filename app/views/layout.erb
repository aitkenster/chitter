<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>

	<% if current_user %>
		Welcome back to Chitter <%= current_user.name %>
		<form method="post" action="/sessions/sign_out">
			<input type="hidden" name="_method" value="delete">
			<input type="submit" value="Sign Out">
			</form>
	<% else %>
		<form  action="/sessions/new">
			<input type="submit" value="Sign In">
		</form>
		<form  action="/users/new">
			<input type="submit" value="Sign Up">
		</form>
	<% end %>

	<% if flash[:errors] && !flash[:errors].empty? %>
		<ul id="errors">
			<% flash[:errors].each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>

	<%if flash[:notice] %>
		<div id="notice">
			<%=flash[:notice] %>
		</div>
	<% end %>

	<%= yield %>
</body>
</html>